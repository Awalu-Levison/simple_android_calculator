<CalculatorLayout>:
    orientation: 'vertical'
    spacing: 10
    padding: 10

    # Display area
    TextInput:
        id: calc_field
        font_size: 32
        multiline: False
        readonly: True
        halign: 'right'
        valign: 'middle'
        size_hint_y: 0.15
        text: ''

    # Buttons area
    GridLayout:
        cols: 4
        spacing: 5
        size_hint_y: 0.65
        row_default_height: '30dp'
        row_force_default: True

        Button:
            text: '7'
            on_press: root.calc_symbol('7')
        Button:
            text: '8'
            on_press: root.calc_symbol('8')
        Button:
            text: '9'
            on_press: root.calc_symbol('9')
        Button:
            text: '⌫'
            on_press: root.backspace()

        Button:
            text: '4'
            on_press: root.calc_symbol('4')
        Button:
            text: '5'
            on_press: root.calc_symbol('5')
        Button:
            text: '6'
            on_press: root.calc_symbol('6')
        Button:
            text: '/'
            on_press: root.calc_symbol('/')

        Button:
            text: '1'
            on_press: root.calc_symbol('1')
        Button:
            text: '2'
            on_press: root.calc_symbol('2')
        Button:
            text: '3'
            on_press: root.calc_symbol('3')
        Button:
            text: '*'
            on_press: root.calc_symbol('*')
        
        Button:
            text: '0'
            on_press: root.calc_symbol('0')
        Button:
            text: '.'
            on_press: root.calc_symbol('.')
        Button:
            text: '-'
            on_press: root.calc_symbol('-')
        Button:
            text: '+'
            on_press: root.calc_symbol('+')

        Button:
            text: 'C'
            on_press: root.clear()
        Button:
            text: '%'
            on_press: root.percentage()
        Button:
            text: '√'
            on_press: root.square_root()
        Button:
            text: '='
            on_press: root.get_result()

        Button:
            text: 'x²'
            on_press: root.square()
            size_hint_x: 1
            size_hint_y: None
            height: '30dp'

        
        Button:
            text: "xʸ"
            on_press: root.power()

        Button:
            text: "log10"
            on_press: root.calculate_log10()

        Button:
            text: "ln"
            on_press: root.calculate_ln()
        
        Button:
            text: "log₂"
            on_press: root.calculate_log_base(2)
        
        Button:
            text: "log₃"
            on_press: root.calculate_log_base(3)
        
        
        Button:
            text: "n!"
            on_press: root.calculate_factorial()
        
        Button:
            text: 'sin'
            on_press: root.calculate_sin()
        
        Button:
            text: 'cos'
            on_press: root.calculate_cos()
        
        Button:
            text: 'tan'
            on_press: root.calculate_tan()
        

        Button:
            text: 'asin'
            on_press: root.calculate_asin()
        
        Button:
            text: 'acos'
            on_press: root.calculate_acos()


        Button:
            text: 'atan'
            on_press: root.calculate_atan()
        
        Button:
            text: '1/x'
            on_press: root.calculate_inverse()

        Button:
            text: "abs"
            on_press: root.calculate_abs()

        Button:
            text: "ⁿ√x"
            on_press: root.calculate_nth_root()

   
    # history area
    ScrollView:
        size_hint_y: 0.2
        do_scroll_x: False

        Label:
            id: history_label
            text_size: self.width, None
            size_hint_y: None
            height: self.texture_size[1]
            valign: 'top'
            halign: 'left'
            font_size: 14
            text: ''
