<CalculatorLayout>:
    orientation: 'vertical'
    spacing: 10
    padding: 10

    BoxLayout:
        size_hint_y: None
        height: '80dp'
        TextInput:
            id: calc_field
            font_size: 32
            multiline: False
            readonly: True
            halign: 'right'
            valign: 'middle'
            text: ''
        on_text: root.calc_field = calc_field

    GridLayout:
        cols: 4
        spacing: 5
        size_hint_y: None
        height: self.minimum_height

        Button:
            text: '7'
            on_press: root.calc_symbol('7')
        Button:
            text: '8'
            on_press: root.calc_symbol('8')
        Button:
            text: '9'
            on_press: root.calc_symbol('9')
        Button:
            text: '⌫'
            on_press: root.backspace()

        Button:
            text: '4'
            on_press: root.calc_symbol('4')
        Button:
            text: '5'
            on_press: root.calc_symbol('5')
        Button:
            text: '6'
            on_press: root.calc_symbol('6')
        Button:
            text: '/'
            on_press: root.calc_symbol('/')

        Button:
            text: '1'
            on_press: root.calc_symbol('1')
        Button:
            text: '2'
            on_press: root.calc_symbol('2')
        Button:
            text: '3'
            on_press: root.calc_symbol('3')
        Button:
            text: '*'
            on_press: root.calc_symbol('*')

        Button:
            text: '0'
            on_press: root.calc_symbol('0')
        Button:
            text: '.'
            on_press: root.calc_symbol('.')
        Button:
            text: '-'
            on_press: root.calc_symbol('-')
        Button:
            text: '+'
            on_press: root.calc_symbol('+')

        Button:
            text: 'C'
            on_press: root.clear()
        Button:
            text: '%'
            on_press: root.percentage()
        Button:
            text: '√'
            on_press: root.square_root()
        Button:
            text: '='
            on_press: root.get_result()

        Button:
            text: 'x²'
            on_press: root.square()
            size_hint_x: 1
            colspan: 4

    Label:
        id: history_label
        size_hint_y: None
        height: '100dp'
        text_size: self.size
        valign: 'top'
        halign: 'left'
        font_size: 14
        text: ''
